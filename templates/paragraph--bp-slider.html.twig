{%
  set classes = [
    'carousel',
    'slide',
    'slider-bootstrap'
  ]
%}

{% block paragraph %}
  <div{{ attributes.addClass(classes).setAttribute('data-ride', 'carousel') }} id="slider-{{ paragraph.id() }}">
    {% block content %}
      {{ content|without('bp_items') }}

      <ol class="carousel-indicators">
        {% for key, item in content.bp_items if key|first != '#' %}
          <li data-target="#slider-{{ paragraph.id() }}" data-slide-to="{{ index }}" {% if loop.first %}class="active" {% endif %}></li>
        {% endfor %}
      </ol>

      <div class="carousel-inner">
        {% for key, item in content.bp_items if key|first != '#' %}
          <div class="carousel-item {% if loop.first %}active{% endif %}">
            {{ item|render }}
          </div>
        {% endfor %}
      </div>

      <a class="carousel-control-prev" href="#slider-{{ paragraph.id() }}" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">{{ 'Previous'|t }}</span>
      </a>
      <a class="carousel-control-next" href="#slider-{{ paragraph.id() }}" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">{{ 'Next'|t }}</span>
      </a>
    {% endblock %}
  </div>
{% endblock paragraph %}
